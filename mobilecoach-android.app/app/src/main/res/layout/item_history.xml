<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="DATA"
        android:padding="5dp"
        android:textColor="#000"
        android:id="@+id/dateView"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/detailTraining"
        android:layout_alignBottom="@+id/detailTraining" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detailTraining"
        android:background="#0000"
        android:src="@mipmap/map"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Large Text"
        android:padding="5dp"
        android:gravity="center"
        android:textColor="#000"
        android:id="@+id/distanceTraining"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/dateView"
        android:layout_alignBottom="@+id/dateView" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/trashBtn"
        android:src="@mipmap/trash"
        android:background="#0000"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>